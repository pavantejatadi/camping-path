<%- include("partials/header") %>
<div class="container" style="margin:0 auto;">
		<h1 style="text-align:center">
		create a new campground 
	</h1>
	<div style="width:30%; margin:0 auto;">
		<form action="/campground" method="POST">
		<div class="form-group">
		<input class="form-control" type="text" name="name" placeholder="enter name" >
			</div> 
		<div class="form-group">
		<input class="form-control" type="text" name="image" placeholder="enter image URL" >
			</div> 
		<div class="form-group">
		<input class="form-control" type="number" name="price" placeholder="price" min="20" max="100">
			</div>
		<div class="form-group">
		<input class="form-control" type="text" name="description" placeholder="describe here" >
			</div> 
		<div class="form-group">
		<button class="btn btn-lg btn-primary">
			create
		</button>
		</div> 
	</form>
		<a href="/campground">go back</a>
	</div> 
	
</div>

<%- include("partials/footer") %>