<%- include("partials/header") %>

	<div class="container">
		
			<header class="jumbotron" >
			<div class="container">
				<h1>
				welcome to Camping Path
				</h1>
				<P>
					view our hand-picked campgrounds all over dthe world ..
				</P>
				<p>
					<a href="campground/new" class="btn btn-primary btn-lg">add new campground</a>
				</p>
			</div>
		</header>
		
		
		

	<div class="row text-center" style="dispaly:flex; flex-wrap:wrap">
<% campgrounds.forEach(function(x){ %>
		<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					
				<img src="<%= x.image %>">
						<div class="caption">
					<h4 >
					<%= x.name %>
				</h4>
				</div>
					<p>
					<a href="/campground/<%= x._id %>" class="btn btn-primary">more info</a>	
					</p>
					
				</div>
				
		</div>
<% }); %>
	</div>
		

	</div>
		

<%- include("partials/footer") %>
